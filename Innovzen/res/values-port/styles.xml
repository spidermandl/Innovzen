<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- EXERCISE PICKER -->
    <style name="exercise_picker_grid_cell_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/exercise_picker_cell_padding</item>
    </style>

    <style name="exercise_picker_grid_cell_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="exercise_picker_grid_cell_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">@dimen/exercise_picker_cell_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="exercise_picker_grid_cell_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/selector_icon_info</item>
    </style>

    <style name="exercise_picker_grid_cell_lin_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>