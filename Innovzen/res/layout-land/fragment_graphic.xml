<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="match_parent"
    
    android:layout_gravity="right"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
      
        
       <LinearLayout 
          android:layout_marginTop="50dp"
          android:layout_marginLeft="140dp"
          android:gravity="center"
          android:orientation="vertical"
           android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/circular_seekbar_background_small"
          >
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/icon_animation_picker_gradient"
           />
        </LinearLayout>
         <LinearLayout 
          android:layout_marginTop="50dp"
          android:layout_marginLeft="140dp"
          android:gravity="center"
          android:orientation="vertical"
           android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/circular_seekbar_background_small"
          >
        <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/icon_animation_picker_petals"
           />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

         <LinearLayout 
          android:layout_marginTop="40dp"
          android:layout_marginLeft="140dp"
          android:gravity="center"
          android:orientation="vertical"
           android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/circular_seekbar_background_small"
          >
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/icon_animation_picker_beach"
           />
        </LinearLayout>
        
       <LinearLayout 
          android:layout_marginTop="40dp"
          android:layout_marginLeft="140dp"
          android:gravity="center"
          android:orientation="vertical"
           android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/circular_seekbar_background_small"
          >
        <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/icon_animation_picker_lungs"
           />
        </LinearLayout>
         
    </LinearLayout>

</LinearLayout>