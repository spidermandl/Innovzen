            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#000000" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="103dp"
            android:background="#67ACBB" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#000000" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="103dp"
            android:background="#67ACBB" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
