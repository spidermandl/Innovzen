            <ImageView
                android:layout_width="240dp"
                android:layout_height="100dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="100dp" />
