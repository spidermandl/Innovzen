<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- EXERCISE PICKER -->
    <style name="exercise_picker_grid_cell_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="exercise_picker_grid_cell_inner_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="exercise_picker_grid_cell_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="exercise_picker_grid_cell_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="exercise_picker_grid_cell_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/selector_icon_info</item>
    </style>

</resources>